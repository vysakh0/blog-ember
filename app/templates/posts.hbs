<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <table class="table" border="0">
                <thead>
                    <tr>
                        <th>
                            Recent posts
                        </th>
                    </tr>
                </thead>
                    {{#each model}}
                <tr>
                    <td>
                        {{#linkTo 'post' this}}
                        {{title}} <small class="muted">by {{author}}</small> </td>
                    {{/linkTo}}

                </tr>
                    {{/each}}

            </table>
        </div>
        <div class="span9">
            {{outlet}}
        </div>
    </div>
</div>
